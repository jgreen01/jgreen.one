---
/**
 * Props:
 * - title: string (page title)
 * - description: string (meta description; keep under ~160 chars)
 * - ogImage?: string (optional social image path/URL)
 */
const { title = "Site Title Placeholder", description = "Describe this site in one sentence.", ogImage } = Astro.props;
import "../styles/global.css";
---
<!doctype html>
<html lang="en" class="bg-background text-foreground dark:bg-backgroundDark dark:text-foregroundDark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Basic social/SEO placeholders; replace values later -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Styles are imported via global.css -->
  </head>
  <body class="font-sans">
    <header class="max-w-3xl mx-auto py-6 px-4 flex items-center justify-between">
      <h1 class="text-2xl font-bold"><a href="/" class="text-foreground dark:text-foregroundDark">MyBlog</a></h1>
      <nav class="space-x-4 text-sm">
        <a href="/" class="text-accent dark:text-accentDark hover:underline">Home</a>
        <a href="/projects/" class="text-accent dark:text-accentDark hover:underline">Projects</a>
        <a href="/blog/" class="text-accent dark:text-accentDark hover:underline">Blog</a>
        <a href="/about" class="text-accent dark:text-accentDark hover:underline">About</a>
        <a href="/contact" class="text-accent dark:text-accentDark hover:underline">Contact</a>
      </nav>
    </header>

    <main class="max-w-prose mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <footer class="max-w-3xl mx-auto py-8 px-4 border-t border-muted dark:border-mutedDark">
      <!-- Footer placeholder: add links (GitHub, LinkedIn, email) later -->
      <small class="block text-center text-muted-foreground dark:text-mutedDark-foreground">© <span id="year">{new Date().getFullYear()}</span> — Site placeholder footer</small>
    </footer>
  </body>
</html>
