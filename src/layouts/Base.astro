---
/**
 * Props:
 * - title: string (page title)
 * - description: string (meta description; keep under ~160 chars)
 * - ogImage?: string (optional social image path/URL)
 * - wider?: boolean (whether to use a wider layout)
 */
const { title = "Site Title Placeholder", description = "Describe this site in one sentence.", ogImage } = Astro.props;
import "../styles/global.scss";
import "../styles/import.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Basic social/SEO placeholders; replace values later -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Styles are imported via import.css and global.scss -->
  </head>
  <body class="bg-geo-v2 min-h-screen flex flex-col">
    <header class="max-w-3xl mx-auto py-6 px-4 flex items-center justify-between relative flex-shrink-0 w-full self-center">
      <div class="text-xl font-bold"><a href="/" class="text-foreground">Jon Green</a></div>

      <!-- Desktop Nav -->
      <nav class="site-nav hidden min-[450px]:flex space-x-4 text-sm">
        <a href="/">Home</a>
        <a href="/projects/">Projects</a>
        <a href="/blog/">Blog</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>

      <!-- Hamburger button -->
      <button id="menu-btn" class="min-[450px]:hidden focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
        </svg>
      </button>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="min-[450px]:hidden hidden absolute top-16 right-4 border border-muted rounded-lg shadow-lg p-6 z-10 w-56">
        <nav class="site-nav flex flex-col space-y-4 text-lg">
            <a href="/" class="hover:bg-muted hover:text-white rounded-md px-2 py-1">Home</a>
            <a href="/projects/" class="hover:bg-muted hover:text-white rounded-md px-2 py-1">Projects</a>
            <a href="/blog/" class="hover:bg-muted hover:text-white rounded-md px-2 py-1">Blog</a>
            <a href="/about" class="hover:bg-muted hover:text-white rounded-md px-2 py-1">About</a>
            <a href="/contact" class="hover:bg-muted hover:text-white rounded-md px-2 py-1">Contact</a>
        </nav>
      </div>
    </header>

    <slot />

    <footer class="max-w-3xl mx-auto py-8 px-4 border-t border-muted">
      <!-- Footer placeholder: add links (GitHub, LinkedIn, email) later -->
      <small class="block text-center text-muted-foreground">Â© <span id="year">{new Date().getFullYear()}</span> â€” Jon Green â€” Software Engineering & Data Science â€¢ Built with Astro â€¢ Open to thoughtful collaboration â€¢ ðŸ§¿</small>
    </footer>
    <script>
      const btn = document.getElementById('menu-btn');
      const menu = document.getElementById('mobile-menu');

      btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>